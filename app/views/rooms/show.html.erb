<% provide(:title, @room.room_id) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @room.room_id %>
      </h1>
      <h2>Size: <%= @room.size %></h2>
      <h2>Status: 
        <% if !@room.status %>
          Available
        <% else %>
          Not available
        <% end %>
      </h2>
      <% if !@room.status?%>
        <%= link_to "Book", edit_room_path, class: "btn btn-lg btn-primary" %>
      <% end %>
    </section>
  </aside>
</div>